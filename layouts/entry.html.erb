<% created_at = attribute_to_time(item[:created_at]) %>
<!DOCTYPE html>
<html lang="en">
    <head>
        <%=
        render '_head',
          :keywords    => item[:keywords],
          :description => item[:description],
          :canonical   => url_for(item),
          :page_title  => item[:title]
        %>
    </head>
    <body>
        <div class="container">
            <div id="container" class="row">
                <div id="top" class="grid_12">
                    <%= render '_header' %>
                </div>

                <div id="content" class="grid_12">
                    <article>
                        <header>
                            <h1>
                                <%= item[:title] %>
                            </h1>

                            <p class="meta">
                                <time pubdate="pubdate"
                                datetime="<%= created_at.strftime('%Y-%m-%d') %>">
                                    <%= created_at.strftime('%A, %B %d, %Y') %>
                                </time>
                            </p>
                        </header>

                        <%= yield %>
                    </article>
                </div>
            </div>

            <%= render '_footer' %>
        </div>
    </body>
</html>
